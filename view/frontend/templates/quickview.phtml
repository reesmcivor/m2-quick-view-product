        });
    });

</script>

<style>
    .quick-product-view svg {
        border: none;
    }
    .quick-product-view.loading {
        animation: pulse 2s infinite;
    }
    @keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 1;
        }
